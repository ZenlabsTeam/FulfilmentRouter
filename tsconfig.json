{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "sourceMap": true,
        "experimentalDecorators": true,
        "alwaysStrict": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,

        "noImplicitReturns": true,
        "noImplicitThis": true,
        "outDir": "dist"
    },
    "include": [
        "src/**/*.ts",
        "test/**/*.ts"

    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}